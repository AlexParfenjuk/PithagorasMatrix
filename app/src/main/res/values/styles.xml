<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="github_image">@drawable/github_image_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="titleTextColor">#de000000</item>
        <item name="shadowColor">#ffffff</item>
        <item name="buttonTextColor">#de000000</item>
        <item name="dividerBackground">#1f000000</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>



    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="github_image">@drawable/github_image_light</item>
        <item name="colorPrimary">@color/primary_darker</item>
        <item name="colorAccent">@color/accent</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="shadowColor">#de000000</item>
        <item name="subheadTextColor">#b3ffffff</item>
        <item name="buttonTextColor">#ffffff</item>
        <item name="dividerBackground">#1fffffff</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>


    <!-- Components of the listitem. -->
    <style name="ListTextWhite">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">?attr/shadowColor</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>


    <style name="ListTextSilver">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">?attr/shadowColor</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>
    <!-- Components of the listitem. -->

</resources>
